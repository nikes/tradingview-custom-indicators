
study(title="TRM", shorttitle="TRM", overlay=true)
shortEMA = input(13)
midEMA = input(21)
longEMA = input(34)
shortSMA = input(55)
midSMA = input(89)
longSMA = input(144)
sEMA = ema(open,shortEMA)
mEMA = ema(open,midEMA)
lEMA = ema(open,longEMA)
sSMA = sma(open,shortSMA)
mSMA = sma(open,midSMA)
lSMA = ema(open,longEMA)
lineShort = sma(close-(sEMA - sSMA),13)
lineMid = sma(close-(mEMA - mSMA),13)
lineLong =sma(close-(lEMA - lSMA),13)
l1 = plot(lineShort, color=blue)
l2 = plot(lineMid, color = orange)
l3 = plot(lineLong, color=yellow)
fill(l1,l2, color =blue)
fill(l2,l3, color = yellow)
